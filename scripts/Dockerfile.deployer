# Use AWS CLI image as base
FROM amazon/aws-cli:latest

# Install required tools
RUN yum install -y python3-pip jq && \
    pip3 install awscli-local

# Set working directory
WORKDIR /app

# Copy deployment scripts
COPY deploy-local.sh /app/scripts/
COPY setup-dev.sh /app/scripts/

# Make scripts executable
RUN chmod +x /app/scripts/*.sh

# Default command
CMD ["./scripts/deploy-local.sh"]
