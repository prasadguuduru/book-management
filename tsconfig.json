{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "references": [
    { "path": "./backend" },
    { "path": "./frontend" }
  ],
  "exclude": ["**/node_modules", "**/dist"]
}