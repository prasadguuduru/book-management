{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SQSQueueManagement",
      "Effect": "Allow",
      "Action": [
        "sqs:CreateQueue",
        "sqs:DeleteQueue",
        "sqs:GetQueueAttributes",
        "sqs:SetQueueAttributes",
        "sqs:ListQueues",
        "sqs:GetQueueUrl"
      ],
      "Resource": [
        "arn:aws:sqs:*:*:dev-*",
        "arn:aws:sqs:*:*:staging-*",
        "arn:aws:sqs:*:*:prod-*"
      ]
    },
    {
      "Sid": "SQSQueuePermissions",
      "Effect": "Allow",
      "Action": [
        "sqs:AddPermission",
        "sqs:RemovePermission"
      ],
      "Resource": [
        "arn:aws:sqs:*:*:dev-*",
        "arn:aws:sqs:*:*:staging-*",
        "arn:aws:sqs:*:*:prod-*"
      ]
    },
    {
      "Sid": "SQSTagging",
      "Effect": "Allow",
      "Action": [
        "sqs:TagQueue",
        "sqs:UntagQueue",
        "sqs:ListQueueTags"
      ],
      "Resource": [
        "arn:aws:sqs:*:*:dev-*",
        "arn:aws:sqs:*:*:staging-*",
        "arn:aws:sqs:*:*:prod-*"
      ]
    },
    {
      "Sid": "SQSDeadLetterQueues",
      "Effect": "Allow",
      "Action": [
        "sqs:CreateQueue",
        "sqs:DeleteQueue",
        "sqs:GetQueueAttributes",
        "sqs:SetQueueAttributes"
      ],
      "Resource": [
        "arn:aws:sqs:*:*:dev-*-dlq",
        "arn:aws:sqs:*:*:staging-*-dlq",
        "arn:aws:sqs:*:*:prod-*-dlq"
      ]
    },
    {
      "Sid": "SQSMessageOperations",
      "Effect": "Allow",
      "Action": [
        "sqs:SendMessage",
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:ChangeMessageVisibility",
        "sqs:PurgeQueue"
      ],
      "Resource": [
        "arn:aws:sqs:*:*:dev-*",
        "arn:aws:sqs:*:*:staging-*",
        "arn:aws:sqs:*:*:prod-*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": [
            "us-east-1",
            "us-west-2",
            "eu-west-1"
          ]
        }
      }
    }
  ]
}