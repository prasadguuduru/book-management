{
  "name": "aws-serverless-typescript-project",
  "version": "1.0.0",
  "description": "AWS Serverless application with TypeScript, React, and Terraform",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start:local": "npm-run-all --parallel start:localstack start:backend start:frontend",
    "start:localstack": "docker-compose up -d localstack",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm run dev",
    "build": "npm-run-all --parallel build:backend build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm-run-all --parallel test:backend test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy:local": "node scripts/deploy-local.js",
    "deploy:dev": "node scripts/deploy-dev.js",
    "deploy:prod": "node scripts/deploy-prod.js",
    "lint": "npm-run-all --parallel lint:backend lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rimraf **/node_modules **/dist **/.terraform",
    "generate:docs": "typedoc --out docs"
  },
  "keywords": [
    "aws",
    "serverless",
    "typescript",
    "react",
    "terraform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
