{
  "name": "ebook-publishing-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade serverless ebook publishing platform with AWS Free Tier optimization",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:deps": "node scripts/install-dependencies.js",
    "setup": "npm run install:deps && npm run setup:local",
    "setup:local": "node scripts/setup-local.js && npm run db:create",
    "setup:dev": "docker-compose up -d && npm run localstack:wait && npm run db:create && npm run localstack:deploy",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "source .env.local 2>/dev/null || true && npm run build --workspace=backend && npm run build --workspace=frontend",
    "build:dev": "npm run build --workspace=backend && npm run build:dev --workspace=frontend",
    "build:prod": "npm run build --workspace=backend && npm run build:prod --workspace=frontend",
    "build:lambda": "./scripts/build-lambda-packages.sh local",
    "build:lambda:local": "./scripts/build-lambda-packages.sh local",
    "build:lambda:qa": "./scripts/build-lambda-packages.sh qa",
    "build:lambda:staging": "./scripts/build-lambda-packages.sh staging",
    "build:lambda:prod": "./scripts/build-lambda-packages.sh prod",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspace=backend && npm run test:coverage --workspace=frontend",
    "lint": "npm run lint --workspace=backend && npm run lint --workspace=frontend",
    "lint:fix": "npm run lint:fix --workspace=backend && npm run lint:fix --workspace=frontend",
    "type-check": "npm run type-check --workspace=frontend && tsc --noEmit --project backend/tsconfig.json",
    "localstack:start": "docker-compose up -d",
    "localstack:stop": "docker-compose down",
    "localstack:wait": "node scripts/wait-for-localstack.js",
    "localstack:health": "node scripts/check-localstack.js",
    "localstack:test": "node scripts/test-localstack.js",
    "localstack:troubleshoot": "node scripts/troubleshoot-localstack.js",
    "troubleshoot": "node scripts/troubleshoot-localstack.js",
    "localstack:logs": "docker-compose logs -f localstack",
    "localstack:deploy": "cd infrastructure && terraform init && terraform apply -auto-approve -var-file=environments/local/terraform.tfvars",
    "localstack:destroy": "cd infrastructure && terraform destroy -auto-approve -var-file=environments/local/terraform.tfvars",
    "localstack:reset": "npm run localstack:destroy && npm run localstack:deploy",
    "db:create": "node scripts/create-table.js",
    "db:setup": "npm run db:create && npm run seed:data",
    "seed:data": "node scripts/smart-seed-data.js local",
    "seed:data:local": "node scripts/smart-seed-data.js local",
    "seed:data:qa": "node scripts/smart-seed-data.js qa",
    "deploy:lambda:qa": "./scripts/deploy-lambda-from-dist.sh qa",
    "deploy:lambda:staging": "./scripts/deploy-lambda-from-dist.sh staging",
    "deploy:lambda:prod": "./scripts/deploy-lambda-from-dist.sh prod",
    "clean": "rm -rf backend/dist frontend/dist node_modules backend/node_modules frontend/node_modules",
    "deploy:dev": "npm run build && node scripts/deploy.js dev",
    "deploy:qa": "npm run build && node scripts/deploy.js qa",
    "deploy:staging": "npm run build && node scripts/deploy.js staging",
    "deploy:prod": "npm run build:prod && node scripts/deploy.js prod",
    "infra:local": "./scripts/deploy-infrastructure.sh local",
    "infra:dev": "./scripts/deploy-infrastructure.sh dev",
    "infra:qa": "./scripts/deploy-infrastructure.sh qa",
    "infra:staging": "./scripts/deploy-infrastructure.sh staging",
    "infra:prod": "./scripts/deploy-infrastructure.sh prod",
    "infra:plan:local": "./scripts/deploy-infrastructure.sh local plan",
    "infra:plan:dev": "./scripts/deploy-infrastructure.sh dev plan",
    "infra:plan:qa": "./scripts/deploy-infrastructure.sh qa plan",
    "infra:apply:local": "./scripts/deploy-infrastructure.sh local apply",
    "infra:apply:dev": "./scripts/deploy-infrastructure.sh dev apply",
    "infra:apply:qa": "./scripts/deploy-infrastructure.sh qa apply",
    "infra:destroy:local": "./scripts/deploy-infrastructure.sh local destroy",
    "infra:test": "./scripts/deploy-infrastructure.sh local test",
    "build:local": "./scripts/build-deployment.sh local",
    "build:qa": "./scripts/build-deployment.sh qa",
    "frontend:build:qa": "npm run build:qa --workspace=frontend",
    "build:staging": "./scripts/build-deployment.sh staging",
    "build:backend:local": "./scripts/build-deployment.sh local backend",
    "build:frontend:local": "source .env.local 2>/dev/null || true && ./scripts/build-deployment.sh local frontend",
    "build:frontend:qa": "./scripts/build-deployment.sh qa frontend",
    "configure:local": "./scripts/configure-environment.sh local",
    "configure:dev": "./scripts/configure-environment.sh dev",
    "configure:qa": "./scripts/configure-environment.sh qa",
    "configure:staging": "./scripts/configure-environment.sh staging",
    "configure:prod": "./scripts/configure-environment.sh prod",
    "test:infra:local": "./scripts/test-infrastructure.sh local",
    "test:infra:dev": "./scripts/test-infrastructure.sh dev",
    "test:infra:qa": "./scripts/test-infrastructure.sh qa",
    "test:infra:api": "./scripts/test-infrastructure.sh local api",
    "test:infra:health": "./scripts/test-infrastructure.sh local health",
    "validate:permissions:local": "./scripts/validate-permissions.sh local",
    "validate:permissions:dev": "./scripts/validate-permissions.sh dev",
    "validate:permissions:staging": "./scripts/validate-permissions.sh staging",
    "validate:permissions:prod": "./scripts/validate-permissions.sh prod",
    "quick:deploy:local": "./scripts/quick-deploy-local.sh",
    "fix:localstack": "./scripts/fix-localstack-deployment.sh",
    "safe:deploy:local": "./scripts/safe-deploy-local.sh",
    "deploy:lambda:local": "./scripts/deploy-lambda-only.sh",
    "fix:dynamodb": "./scripts/fix-dynamodb-state.sh",
    "env:local": "source ./scripts/setup-localstack-env.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2",
    "@types/node": "^20.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ebook-publishing-platform.git"
  },
  "keywords": [
    "ebook",
    "publishing",
    "serverless",
    "aws",
    "typescript",
    "react",
    "terraform"
  ],
  "author": "Your Organization",
  "license": "MIT"
}