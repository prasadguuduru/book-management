{
  "name": "book-management",
  "version": "1.0.0",
  "description": "Book Management System with AWS Serverless and React",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "./scripts/start-services.sh",
    "start:backend": "docker-compose up -d localstack && ./scripts/setup-localstack.sh",
    "start:frontend": "cd frontend && npm start",
    "build": "npm-run-all --parallel build:backend build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm-run-all --parallel test:backend test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "logs:watch": "./scripts/log-aggregator.sh watch",
    "logs:clean": "./scripts/log-aggregator.sh clean",
    "logs:aggregate": "./scripts/log-aggregator.sh aggregate",
    "localstack:start": "docker-compose up -d localstack && ./scripts/setup-localstack.sh",
    "localstack:stop": "docker-compose down",
    "localstack:logs": "docker-compose logs -f localstack",
    "localstack:restart": "docker-compose restart localstack",
    "populate:data": "node scripts/populate-mock-data.js",
    "clean": "npm-run-all clean:*",
    "clean:modules": "rimraf '**/node_modules'",
    "clean:dist": "rimraf '**/dist'",
    "clean:build": "rimraf '**/build'",
    "clean:localstack": "./scripts/cleanup.sh",
    "terraform:init": "./scripts/terraform-ops.sh init",
    "terraform:plan": "./scripts/terraform-ops.sh plan",
    "terraform:apply": "./scripts/terraform-ops.sh apply",
    "terraform:destroy": "./scripts/terraform-ops.sh destroy",
    "terraform:show": "./scripts/terraform-ops.sh show"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  }
}