  "project": {
    "id": "ebook-platform-2024",
    "displayName": "Ebook Publishing Platform",
    "category": "enterprise-application",
    "tags": ["serverless", "aws", "typescript", "react", "rbac", "publishing", "free-tier"],
    "language": "typescript",
    "framework": "serverless"
  },
  
