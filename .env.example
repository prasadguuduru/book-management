# Environment Configuration Template
# Copy this file to .env.local, .env.dev, .env.staging, or .env.prod and fill in the values

# Environment
NODE_ENV=development
ENVIRONMENT=local

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# LocalStack Configuration (for local development)
AWS_ENDPOINT_URL=http://localhost:4566
LOCALSTACK_HOSTNAME=localhost

# Database
TABLE_NAME=local-ebook-platform

# JWT Configuration
JWT_PUBLIC_KEY=dummy-public-key-for-local-development
JWT_PRIVATE_KEY=dummy-private-key-for-local-development
JWT_ISSUER=ebook-auth-service
JWT_AUDIENCE=ebook-platform-api

# Encryption
ENCRYPTION_KEY=dummy-encryption-key-for-local-development-32-chars

# API Configuration
API_BASE_URL=http://localhost:4566
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# Free Tier Monitoring
ENABLE_FREE_TIER_MONITORING=true
FREE_TIER_ALERT_THRESHOLD=0.8

# Frontend Configuration (for build process)
VITE_API_URL=http://localhost:4566
VITE_WS_URL=ws://localhost:4566
VITE_ENVIRONMENT=local
VITE_ENABLE_DEBUG=true