# Use Node 18 Alpine as base
FROM node:18-alpine

# Install development tools
RUN apk add --no-cache python3 make g++ zip

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Default command (can be overridden in docker-compose)
CMD ["npm", "run", "watch"]
